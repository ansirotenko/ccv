{
    "build": {
        "distDir": "dist"
    },
    "tauri": {
        "systemTray": {
            "iconPath": "dist/icon.ico",
            "iconAsTemplate": true
        },
        "bundle": {
            "identifier": "studio.tauri.hello_tauri_webdriver",
            "icon": [
                "./dist/icon256.png",
                "./dist/icon192.png",
                "./dist/icon32.png",
                "./dist/icon.ico"
            ]
        },
        "allowlist": {
            "all": false
        },
        "windows": [
            {
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "visible": false,
                "skipTaskbar": true
            },
            {
                "center": true,
                "width": 400,
                "height": 200,
                "decorations": false,
                "url": "splashscreen.html",
                "label": "splashscreen"
            }
        ]
    }
}