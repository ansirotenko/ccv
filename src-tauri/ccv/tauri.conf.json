{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../../dist"
    },
    "package": {
        "productName": "ccv",
        "version": "0.1.0"
    },
    "tauri": {
        "systemTray": {
            "iconPath": "icons/icon.ico",
            "iconAsTemplate": true
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "ansirotenko.ccv",
            "publisher": "ansirotenko",
            "category": "DeveloperTool",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "globalShortcut": {
                "all": true
            },
            "window": {
                "all": true
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://raw.githubusercontent.com/ansirotenko/ccv/main/latest.json"
            ],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVFNkQ2NUVCQjJEM0FCMjAKUldRZ3E5T3k2MlZ0WGlpeW9ka2kxdTZRV1oxZkphbDdKNWRqaWtOYTdjVThldFdlMUx2dlp1L04K",
            "windows": {
                "installMode": "passive"
            }
        },
        "windows": [
            {
                "title": "ccv",
                "width": 380,
                "height": 520,
                "center": true,
                "resizable": false,
                "fullscreen": false,
                "visible": false,
                "skipTaskbar": true,
                "url": "screens/primary.html",
                "decorations": false,
                "label": "primary"
            },
            {
                "center": true,
                "width": 530,
                "height": 285,
                "decorations": false,
                "resizable": false,
                "url": "screens/splashscreen.html",
                "label": "splashscreen"
            },
            {
                "center": true,
                "width": 610,
                "height": 360,
                "visible": false,
                "decorations": false,
                "resizable": false,
                "url": "screens/about.html",
                "label": "about"
            },
            {
                "center": true,
                "width": 510,
                "height": 680,
                "visible": false,
                "decorations": false,
                "resizable": false,
                "url": "screens/settings.html",
                "label": "settings"
            }
        ]
    }
}