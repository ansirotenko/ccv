{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "ccv",
        "version": "0.0.0"
    },
    "tauri": {
        "systemTray": {
            "iconPath": "icons/icon.ico",
            "iconAsTemplate": true
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "ansirotenko.ccv",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "globalShortcut": {
                "all": true
            }
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "title": "ccv",
                "width": 380,
                "height": 450,
                "center": true,
                "resizable": true,
                "fullscreen": false,
                "visible": false,
                "skipTaskbar": true,
                "url": "screens/main.html",
                "decorations": false,
                "label": "main"
            },
            {
                "center": true,
                "width": 560,
                "height": 315,
                "decorations": false,
                "resizable": false,
                "url": "screens/splashscreen.html",
                "label": "splashscreen"
            }
        ]
    }
}